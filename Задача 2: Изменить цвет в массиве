#include <stdio.h>
#include <string.h>

int main() {
    // 1. Создаем массив цветов
    char colors[3][10] = {"красный", "синий", "зеленый"};
    
    // 2. Меняем первый элемент (индекс 0) с "красный" на "желтый"
    // Важно использовать strcpy для копирования строк
    strcpy(colors[0], "желтый");
    
    // 3. Выводим измененный массив
    printf("Массив после изменения:\n");
    for (int i = 0; i < 3; i++) {
        printf("%d: %s\n", i, colors[i]);
    }
    
    return 0;
}
